<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Rating</th>
        <th>Watch Date</th>
        <th>Type</th>
        <th>First Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @media.each do |media| %>
        <% if media.user == current_user && media.media_type === @mediaType %>
          <tr>
            <td>
              <%= media.title %>
            </td>
            <td><%= media.rating %></td>
            <td><%= media.date_completed %></td>
            <td><%= media.media_type %></td>
            <td><%= media.first_time %></td>
            <td><%= link_to "Show", medium_path(media) %></td>
            <td><%= link_to "Edit", edit_medium_path(media) %></td>
            <td><%= button_to "Destroy", media, method: :delete, data: { confirm: "Are you sure?" } %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <td><%= link_to "New Media", new_medium_path, class:"btn btn-secondary" %></td>
  <% else %>
    <h1>Hello World!</h1>
    This is my first Rails Webpage...
  <% end %>
